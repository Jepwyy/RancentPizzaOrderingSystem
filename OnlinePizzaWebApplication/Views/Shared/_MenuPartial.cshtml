@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager


@if (User.IsInRole("Admin"))
{
    <ul class="sidebar-nav" id="sidebar-nav">

        <li class="nav-item">
            <a class="nav-link " asp-controller="Home" asp-action="Dashboard">
                <i class="bi bi-grid"></i>
                <span>Dashboard</span>
            </a>
        </li><!-- End Dashboard Nav -->

        <li class="nav-heading">Manage</li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Pizzas" asp-action="Index">
                <i class="bi bi-pie-chart-fill"></i>
                <span>Pizzas</span>
            </a>
        </li><!-- End Profile Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Categories" asp-action="Index">
                <i class="bi bi-card-checklist"></i>
                <span>Pizza Categories</span>
            </a>
        </li><!-- End F.A.Q Page Nav -->



        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Ingredients" asp-action="Index">
                <i class="bi bi-box-seam-fill"></i>
                <span>Ingredients</span>
            </a>
        </li><!-- End Contact Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="PizzaIngredients" asp-action="Index">
                <i class="bi bi-box2-fill"></i>
                <span>Pizza Ingredients</span>
            </a>
        </li><!-- End Register Page Nav -->

        <li class="nav-heading">Reports</li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Reviews" asp-action="Index">
                <i class="bi bi-envelope-fill"></i>
                <span>Reviews</span>
            </a>
            <a class="nav-link collapsed" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-bag-heart-fill"></i>
                <span>Orders</span>
            </a>
        </li><!-- End Login Page Nav -->



    </ul>
}
else if (SignInManager.IsSignedIn(User))
{
    <ul class="sidebar-nav" id="sidebar-nav">

        <li class="nav-item">
            <a class="nav-link " asp-controller="Home" asp-action="Dashboard">
                <i class="bi bi-grid"></i>
                <span>Dashboard</span>
            </a>
        </li><!-- End Dashboard Nav -->

        <li class="nav-heading">Pizza`s</li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Pizzas" asp-action="ListAll">
                <i class="bi bi-pie-chart-fill"></i>
                <span>Pizzas</span>
            </a>
        </li><!-- End Profile Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                <i class="bi bi-menu-button-wide"></i><span>Category</span><i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                @await Component.InvokeAsync("CategoryMenu")
            </ul>
            
        </li>

        <li class="nav-heading">Reviews</li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Reviews" asp-action="Index">
                <i class="bi bi-envelope"></i>
                <span>Reviews</span>
            </a>
        </li><!-- End Contact Page Nav -->

        

        <li class="nav-heading">History</li>

        <li class="nav-item">
            <a class="nav-link collapsed" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-bag-heart-fill"></i>
                <span>Orders</span>
            </a>
        </li><!-- End Login Page Nav -->



    </ul>
    

}